<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">

    <EditText
        android:id="@+id/birth_fathers_name_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Father's Name"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:background="@drawable/input_outline"
        android:inputType="textPersonName"
       />

            <EditText
                android:id="@+id/birth_mother_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:gravity="center"
                android:hint="Mother's Name"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <EditText
                android:id="@+id/birth_hospital_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:gravity="center"
                android:hint="Hopital Name"
                android:inputType="textPersonName"
                android:padding="15dp" />


            <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        android:text="Gender" />

    <Spinner
        android:id="@+id/spinner_birth_registration"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="25dp" />

    <EditText
        android:id="@+id/birth_fathers_id_edt"
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:hint="Father National Id"
        android:padding="15dp"
        android:background="@drawable/input_outline"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:ems="10"

        />

    <EditText
        android:id="@+id/birth_mother_national_id_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Mother National Id"
        android:padding="15dp"
        android:background="@drawable/input_outline"
        android:layout_margin="10dp"
        android:gravity="center" />

            <EditText
                android:id="@+id/birth_village_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:gravity="center"
                android:hint="Village"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <EditText
        android:id="@+id/birth_parish_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Parish"
        android:padding="15dp"
        android:background="@drawable/input_outline"
        android:layout_margin="10dp"
        android:gravity="center" />
            <EditText
                android:id="@+id/birth_county_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="County"
                android:padding="15dp"
                android:background="@drawable/input_outline"
                android:layout_margin="10dp"
                android:gravity="center" />

    <Button
        android:id="@+id/birth_registration_bt"
        android:layout_margin="10dp"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Birth Registration" />
<TextView
    android:layout_width="0dp"
    android:layout_height="14dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="14dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="14dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="14dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>