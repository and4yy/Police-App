<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image_death_registration"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/add_photo"
                android:layout_margin="10dp" />

            <EditText
                android:id="@+id/deaths_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:gravity="center"
                android:hint="Name"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <EditText
                android:id="@+id/death_mother_name_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:gravity="center"
                android:hint="Mother's Name"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <EditText
                android:id="@+id/death_father_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:gravity="center"
                android:hint="Father's Name"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <EditText
                android:id="@+id/death_national_id_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:gravity="center"
                android:hint="National Id"
                android:inputType="textPersonName"
                android:padding="15dp" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="center"
                android:text="Age"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner_death_age_registration"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_margin="8dp" />

            <EditText
                android:id="@+id/death_cause_id_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:gravity="center"
                android:hint="Cause"
                android:inputType="textPersonName"
                android:padding="25dp"

                />


            <Button
                android:id="@+id/death_registration_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorPrimaryDark"
                android:text="Death Registration"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="14dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="14dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="14dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="14dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>