<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardElevation="3dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="6dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Offence:"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="My Offence"
                    android:id="@+id/item_offence"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/lineColor"
                android:layout_height="1dp"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Fine:"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                </TableRow>


            </TableLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Max:"
                    android:textStyle="italic"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Car"
                    android:id="@+id/item_fine_max"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Min:"
                    android:textStyle="italic"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Car"
                    android:id="@+id/item_fine_min"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/lineColor"
                android:layout_height="1dp"
                />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Imprisonment:"
                        android:layout_margin="10dp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content" />

                </TableRow>


            </TableLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Max:"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Car"
                    android:id="@+id/item_imprisonment_max"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_width="wrap_content"
                    android:text="Min:"
                    android:layout_margin="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:textStyle="italic"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="Car"
                    android:id="@+id/item_imprisonment_min"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:background="@color/lineColor"
                android:layout_height="1dp"
                />
        </LinearLayout>



    </android.support.v7.widget.CardView>

</LinearLayout>