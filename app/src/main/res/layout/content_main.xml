<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="company.override.huzykamz.policecopuganda.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="10dp"
                            android:src="@drawable/star_icon" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="10dp"
                            android:text="Favorite"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="17sp"
                            android:textStyle="bold" />


                        <View
                            android:layout_width="1dp"
                            android:layout_marginLeft="30dp"
                            android:background="@color/lineColor"
                            android:layout_height="match_parent"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:onClick="OnSelectDistrict"
                            android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="20dp"
                            android:textColor="@color/colorPrimary"
                            android:paddingLeft="10dp"
                            android:text="District :"
                            android:textStyle="bold"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/district_settings_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="10dp"
                            android:text="Kamapla"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="17sp"
                          />
                        <ProgressBar
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/progressBar_D"
                            />
                        </LinearLayout>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:background="@color/lineColor"
                        android:layout_height="2dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:id="@+id/rv_menu_main"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/lineColor"
                        android:layout_marginBottom="35dp"
                        android:layout_height="2dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="10dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/star_icon"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="More"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2_" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/lineColor"
                        android:layout_height="2dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="30dp"
                            android:id="@+id/rv_menu_main_two"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/lineColor"
                        android:layout_marginBottom="35dp"
                        android:layout_height="2dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="10dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/activity_feed_icon"
                            android:layout_height="20dp" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:text="News Feeds"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content" />
                        <ProgressBar
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/progressBar_News"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/lineColor"
                        android:layout_height="2dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <com.daimajia.slider.library.SliderLayout
                            android:id="@+id/slider"
                            android:layout_width="fill_parent"
                            android:layout_height="200dp"

                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/lineColor"
                        android:layout_marginBottom="35dp"
                        android:layout_height="2dp"/>
                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_marginTop="20dp"
                            android:paddingLeft="10dp"
                            android:layout_marginBottom="20dp"
                            android:src="@drawable/map_icon"
                            android:layout_height="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Police Stations"
                            android:textSize="17sp"
                            android:textStyle="bold"
                            android:paddingLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_height="wrap_content"
                             />
                        <ProgressBar
                            style="?android:attr/progressBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginBottom="20dp"
                            android:id="@+id/pb_map_activity"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:background="@color/lineColor"
                        android:layout_height="2dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <fragment
                            android:id="@+id/Activitymap"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="230sp"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:background="@color/lineColor"
                        android:layout_marginBottom="35dp"
                        android:layout_height="2dp"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
