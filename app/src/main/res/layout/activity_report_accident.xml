<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"

    >




    <ImageView
        android:id="@+id/ivAttachment_accident"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_height="100dp"
        android:src="@drawable/attach_icon"
        android:layout_marginBottom="22dp"
        android:layout_above="@+id/tvHeading"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/tv_file_name_accident"
        android:textColor="#000"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_margin="30dp"
        android:id="@+id/tvHeading"
        android:text="Touch the icon above  to upload an Accident  Video File "
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="179dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:id="@+id/information_crimes_edt_accident"
        android:padding="20dp"
        android:gravity="center"
        android:hint="Information"
        android:layout_margin="8dp"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Phone Number (Optional)"
        android:padding="20dp"
        android:gravity="center"
        android:id="@+id/phone_number_accident" />

    <Button
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Submit a Crime"
        android:gravity="center"
        android:onClick="OnSubmitCrime"
        android:textColor="#fff"
        android:id="@+id/b_upload_accident"
        android:background="@drawable/button_corner_radius"
        android:layout_height="wrap_content" />

</LinearLayout>