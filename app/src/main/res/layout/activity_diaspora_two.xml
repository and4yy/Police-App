<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/passport_no_diaspora_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:gravity="center"
                android:hint="Passport No."
                android:inputType="textPersonName"
                android:padding="15dp" />


            <EditText
                android:id="@+id/national_id_diaspoara_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:gravity="center"
                android:hint="National ID."
                android:inputType="textPersonName"
                android:padding="15dp" />

            <EditText
                android:id="@+id/country_diaspora_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:gravity="center"
                android:hint="Country"
                android:inputType="textPersonName"
                android:padding="15dp" />

            <EditText
                android:id="@+id/city_diaspora_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/input_outline"
                android:ems="10"
                android:gravity="center"
                android:hint="City"
                android:inputType="textPersonName"
                android:padding="15dp" />


            <Button
                android:id="@+id/two_next_diaspora_bt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:background="@color/colorPrimaryDark"
                android:text="Next"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="14dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="14dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="14dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="14dp" />

        </LinearLayout>
        </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>